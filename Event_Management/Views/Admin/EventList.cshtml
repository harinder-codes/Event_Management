<script>
    $(document).ready(function () {
        var $modal = $('#kt_modal_add_user');
        var $form = $modal.find('#kt_modal_add_user_form');
        var modalInstance = new bootstrap.Modal($modal[0]);
        // Submit button click handler
        $modal.find('[data-kt-users-modal-action="submit"]').click(function (event) {
            debugger;
            Loader(true);
            event.preventDefault();

            $.ajax({
                type: "POST",
                url: "/Admin/AddNewEvent",
                data: {
                    "Title": $("#title").val(),
                    "Description": $("#description").val(),
                    "Location": $("#location").val(),
                    "TotalSeats": $("#total_seats").val(),
                    "EventDate": $("#event_date").val(),
                    "EventTime": $("#event_time").val()
                },
                success: function (result) {
                    //debugger;
                    if (result.data == 1) {
                        Loader(false);
                        Swal.fire({
                            text: "Event added successfully!",
                            icon: "success",
                            buttonsStyling: false,
                            confirmButtonText: "Ok, got it!",
                            customClass: {
                                confirmButton: "btn btn-primary"
                            }
                        }).then((result) => {
                            if (result.isConfirmed) {
                                // Redirect to a new page (replace 'newPageUrl' with your desired URL)
                                window.location.href = 'Admin/EventList';
                            }
                        });
                    }
                    else {
                        Loader(false);
                        Swal.fire({
                            text: "Error occured! Please try again later.",
                            icon: "warrning",
                            buttonsStyling: false,
                            confirmButtonText: "Ok, got it!",
                            customClass: {
                                confirmButton: "btn btn-primary"
                            }
                        }).then((result) => {
                            if (result.isConfirmed) {

                                window.location.href = 'Admin/EventList';
                            }
                        });
                    }

                },
                error: function (req, status, error) {
                    Loader(false);
                    Swal.fire({
                        text: "rror occured! Please try again later.",
                        icon: "warrning",
