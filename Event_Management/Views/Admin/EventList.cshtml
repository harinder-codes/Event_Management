    $(document).ready(function () {
        var $viewEnrolledUsersModal = $('#kt_modal_view_enrolled_users'); // View Enrolled Users modal
        var enrolledUsersTableBody = $('#kt_table_enrolled_users tbody'); // Table body reference
        var enrolledUsersModalInstance = new bootstrap.Modal($viewEnrolledUsersModal[0]); // Bootstrap modal instance

        // Function to fetch and display enrolled users for an event
        window.viewEnrolledUsers = function (eventId) {
            enrolledUsersTableBody.html('<tr><td colspan="3" class="text-center text-gray-500">Loading...</td></tr>'); // Show loading

            $.ajax({
                url: '/Admin/GetEnrolledUserList',
                type: 'GET',
                data: { EventID: eventId },
                success: function (response) {
                    if (response && response.length > 0) {
                        enrolledUsersTableBody.empty(); // Clear previous data
                        response.forEach(user => {
                            enrolledUsersTableBody.append(`
                            <tr>
                                <td>${user.FirstName}</td>
                                <td>${user.LastName}</td>
                                <td>${user.Email}</td>
                            </tr>
                        `);
                        });
                    } else {
                        enrolledUsersTableBody.html('<tr><td colspan="3" class="text-center text-gray-500">No users enrolled in this event.</td></tr>');
                    }

                    // Show the modal
                    enrolledUsersModalInstance.show();
                },
                error: function () {
                    enrolledUsersTableBody.html('<tr><td colspan="3" class="text-center text-danger">Error loading data.</td></tr>');
                }
            });
        };

        // Attach click event to dynamically created elements
        $(document).on('click', '.view-enrolled-users', function () {
            let eventId = $(this).data('event-id');
            viewEnrolledUsers(eventId);
        });

        // Close the modal when clicking "X" or "Close" without confirmation
        $(document).on('click', '[data-kt-users-modal-action="close"], [data-kt-users-modal-action="cancel"]', function (event) {
            event.preventDefault();
            enrolledUsersModalInstance.hide(); // Simply close the modal
        });
    });

</script>